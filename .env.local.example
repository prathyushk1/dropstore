# ===========================================
# SUPABASE DATABASE CONFIGURATION
# ===========================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ===========================================
# PAYMENT GATEWAY (RAZORPAY)
# ===========================================
# Get these from: https://dashboard.razorpay.com/app/keys
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# ADMIN PANEL SECURITY
# ===========================================
# Set a strong password for admin access
ADMIN_PASSWORD=change_this_to_secure_password

# ===========================================
# EMAIL SERVICE (OPTIONAL - RESEND)
# ===========================================
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxx
EMAIL_FROM=Your Store Name <noreply@yourdomain.com>
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# ERROR MONITORING (OPTIONAL - SENTRY)
# ===========================================
# Get DSN from: https://sentry.io/settings/projects/
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
